<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper是根标签。namespace属性是找到当前配置的依据 -->
<!-- 由于最理想的Mybatis使用方式是：通过Mapper接口调用接口方法，访问数据库 -->
<!-- 这样的理想方式要求：能够通过接口全类名找到Mapper配置 -->
<!-- 所以：我们就用Mapper接口的全类名来给namespace属性赋值 -->
<mapper namespace="com.example.dao.mapper.VideoMapper">


    <update id="savePicturePath">
        update video_info
        set video_cover=#{picturePath}
        where video_md5 = #{md5}
    </update>
    <select id="getVideoUrlFromVideo" resultType="java.util.Map">
        select bucket_name, object_key
        from `video`
        where id = #{id}
    </select>
    <insert id="saveVideo" useGeneratedKeys="true" keyProperty="id">
        insert into video (bucket_name, object_key)
        values (#{bucketName}, #{objectKey})
    </insert>
    <select id="getScrolling" resultType="com.example.dao.model.entity.Scrolling">
        select *
        from scrolling
        where video_id = #{id}
    </select>

    <select id="getVideoLabel" resultType="com.example.dao.model.entity.WorksLabel">
        select * from works_label;
    </select>

    <select id="getVideoInfo" resultType="com.example.dao.model.entity.VideoInfo">
        select * from video_info where works_label_id = #{worksLabelId} limit #{pageSize} offset #{offset}
    </select>

    <delete id="delVideo">
        delete from video_info where video_id = #{videoId}
    </delete>

    <select id="getVideoInfoCount" resultType="com.example.dao.model.entity.VideoInfo">
        select * from video_info where works_label_id = #{worksLabelId}
    </select>

    <insert id="addVideoRecordToDB">
        insert into video_record (user_id,
                                  video_id,
                                  duration)
        values (#{userId},
                #{videoId},
                #{duration})
    </insert>

    <select id="getVideoRecord" resultType="com.example.dao.model.entity.VideoRecord">
        select * from video_record where user_id=#{userId} and
                                  video_id=#{videoId}
    </select>

    <update id="updateVideoRecordToDB">
        update video_record set duration = #{duration} where user_id=#{userId} and
            video_id=#{videoId}
    </update>

    <select id="getVideoRecordByUserId" resultType="com.example.dao.model.entity.VideoRecord">
        select * from video_record where user_id=#{userId}
    </select>

    <select id="getVideoInfoByVideoId" resultType="com.example.dao.model.entity.VideoInfo">
        select * from video_info where video_id = #{videoId}
    </select>

    <select id="getVideoInfoByUserIdAndVideoStatus" resultType="com.example.dao.model.entity.VideoInfo">
        select * from video_info where user_id=#{currentUserId} and video_status=#{id}
    </select>

    <select id="getVideoInfoByUserIdAndVideoReview" resultType="com.example.dao.model.entity.VideoInfo">
        select * from video_info where user_id=#{currentUserId} and video_review=#{id}
    </select>

    <select id="getVideoInfoByUserId" resultType="com.example.dao.model.entity.VideoInfo">
        select * from video_info where user_id=#{userId}
    </select>

    <select id="getVideoReportMsg" resultType="com.example.dao.model.vo.VideoReportMsgVO">
        select * from video_report
                 where reporting_user_id=#{userId} and (report_status=2 or report_status=3)
    </select>

    <select id="getVideoUploadMsg" resultType="com.example.dao.model.vo.VideoUploadMsgVO">
        select * from video_info
        where user_id=#{userId} and (video_review=2 or video_review=1)
    </select>
</mapper>
